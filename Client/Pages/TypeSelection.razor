@page "/"
@inject NavigationManager NavigationManager



<MudPaper class="py-3 my-3"  @onclick="NavigateToSportComponent">
    <MudText Typo="Typo.h4" class="my-3" Align="Align.Center">Sport</MudText>
</MudPaper>

<MudPaper class="py-3 mb-3"  @onclick="NavigateToBoulderComponent">
    <MudText Typo="Typo.h4" class="my-3" Align="Align.Center">Boulder</MudText>
</MudPaper>

@code {
    private void NavigateToSportComponent()
    {
        NavigationManager.NavigateTo("sport");
    }

    private void NavigateToBoulderComponent()
    {
        NavigationManager.NavigateTo("boulder");
    }
}